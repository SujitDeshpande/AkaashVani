<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chatListItemImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_chat2"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:background="@drawable/chat_bubble_green"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:paddingBottom="@dimen/pad_5dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_chat_item"
        android:paddingTop="@dimen/pad_5dp">

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" />

        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="sd"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lbl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/v1"
        android:layout_below="@+id/v1"
        android:layout_marginRight="@dimen/pad_20dp"
        android:layout_marginTop="@dimen/pad_5dp"
        android:text="textvdv"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_14sp" />
</LinearLayout>
</RelativeLayout>